# ===========================
# LLM API 설정
# ===========================
# LLM API 인증 키 (필수)
API_KEY=your_api_key_here

# LLM API 엔드포인트 URL (필수)
# 예: https://your-internal-llm-api.com/v1/chat/completions
LLM_API_BASE_URL=https://your-llm-api.com/v1/chat/completions

# ===========================
# 서버 설정
# ===========================
# FastAPI 서버 호스트 및 포트
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=9393

# Streamlit 앱 호스트 및 포트
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=9191

# ===========================
# API 타임아웃 및 재시도 설정
# ===========================
# API 호출 타임아웃 (초)
API_TIMEOUT=30

# 최대 재시도 횟수
API_MAX_RETRIES=3

# 재시도 간 대기 시간 (초)
API_RETRY_DELAY=1

# ===========================
# 로깅 설정
# ===========================
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 로그 파일 저장 디렉토리
LOG_DIR=logs

# ===========================
# 모델 설정
# ===========================
# 기본 모델명
DEFAULT_MODEL=gpt-4o

# ===========================
# CORS 설정
# ===========================
# CORS 허용 출처 (콤마로 구분, "*"는 모든 출처 허용)
# 프로덕션에서는 구체적인 도메인을 지정하세요
CORS_ORIGINS=*
